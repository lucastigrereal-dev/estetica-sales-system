# CRM Tigre - Production Environment Variables

# Application
APP_NAME=CRM Tigre
APP_VERSION=2.0.0
DEBUG=false
ENVIRONMENT=production

# Database (PostgreSQL in production)
DATABASE_URL=postgresql://crm_user:crm_password@postgres:5432/crm_tigre
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# Redis Cache
REDIS_URL=redis://:redis_password@redis:6379/0
CACHE_TTL=3600

# Security
SECRET_KEY=your_super_secret_key_change_me_in_production
JWT_SECRET_KEY=your_jwt_secret_key_change_me_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Payment Encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
PAYMENT_ENCRYPTION_KEY=your_fernet_encryption_key_here_change_me

# CORS (comma-separated origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000

# Gerencianet PIX (optional - can be configured per clinic)
GERENCIANET_CLIENT_ID=
GERENCIANET_CLIENT_SECRET=
GERENCIANET_PIX_CERT_DIR=/app/certs/
GERENCIANET_PIX_KEY=
GERENCIANET_WEBHOOK_URL=https://yourdomain.com/api/pagamentos/webhook/gerencianet
GERENCIANET_SANDBOX=false

# Asaas (optional - can be configured per clinic)
ASAAS_API_KEY=
ASAAS_WEBHOOK_URL=https://yourdomain.com/api/pagamentos/webhook/asaas
ASAAS_SANDBOX=false

# Email Settings (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=CRM Tigre

# WhatsApp Integration
WHATSAPP_ENABLED=true
WHATSAPP_API_URL=https://yourdomain.com/whatsapp
WHATSAPP_API_KEY=your_whatsapp_api_key

# File Upload
MAX_UPLOAD_SIZE=20971520  # 20MB in bytes
UPLOAD_DIR=/app/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# n8n Integration
N8N_WEBHOOK_URL=http://n8n:5678/webhook
N8N_API_KEY=your_n8n_api_key
