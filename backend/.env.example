# Estética Sales System - Environment Variables

# Database
DATABASE_URL=sqlite:///./database/estetica.db

# Payment Encryption (gere com: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
PAYMENT_ENCRYPTION_KEY=your_fernet_encryption_key_here

# Gerencianet PIX (opcional - pode ser configurado por clínica)
GERENCIANET_CLIENT_ID=your_client_id
GERENCIANET_CLIENT_SECRET=your_client_secret
GERENCIANET_PIX_CERT_DIR=./certs/
GERENCIANET_PIX_KEY=your_pix_key
GERENCIANET_WEBHOOK_URL=https://yourdomain.com/api/pagamentos/webhook/gerencianet
GERENCIANET_SANDBOX=false

# Asaas (opcional - pode ser configurado por clínica)
ASAAS_API_KEY=your_asaas_api_key
ASAAS_WEBHOOK_URL=https://yourdomain.com/api/pagamentos/webhook/asaas
ASAAS_SANDBOX=false

# Application
APP_NAME=Estética Sales System
APP_VERSION=2.0.0
DEBUG=true

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
